{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"module": "ES2020",
		"moduleResolution": "node",
		"rootDir": "./src/",
		"outDir": "./dist/",
		"noUnusedLocals": true,
		"noUnusedParameters": true,

		"typeRoots": ["src/types", "./node_modules/@types"]
	},
	"include": ["src/**/*.ts"],
	"tsc-alias": {
		"resolveFullPaths": true,
		"verbose": false
	}
}
